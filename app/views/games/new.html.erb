<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>
<br>
<div class="word-game">
  <h1 class="title">New Game</h1>

  <div class="letter-grid">
    <%@letters.each do |letter|%>
      <h1 class="letter"><%=letter.upcase%></h1>
    <%end%>
  </div>


  <form action="score" method="get" class="d-flex col-4" role="search">
    <label for="word"></label>
    <input id="word" type="text" name="word" class="form-control me-2" placeholder="word">
    <input type="submit" value="Submit" class="btn btn-primary">
  </form>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</div>
